#!/bin/bash
# prerm script for bluetooth-sensor-scanner

set -e

case "$1" in
    remove|upgrade|deconfigure)
        # Stop the timer and service using deb-systemd-invoke
        deb-systemd-invoke stop ws-bluetooth-scanner.timer >/dev/null || true
        deb-systemd-invoke stop ws-bluetooth-scanner.service >/dev/null || true
        
        echo "Bluetooth scanner timer has been stopped."
        ;;
    
    failed-upgrade)
        ;;
    
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
